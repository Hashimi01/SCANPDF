# Redis Configuration
# استخدم كلمة مرور قوية جداً (مثال: ElMoustechar2025SecureRedis!@#$%^)
REDIS_PASSWORD=your_strong_redis_password_here

# للوصول من الخارج (Vercel)
# استبدل YOUR_SERVER_IP بـ IP السيرفر الفعلي
REDIS_URL=redis://:your_strong_redis_password_here@YOUR_SERVER_IP:6379

# BullMQ Queue Name
BULLMQ_QUEUE=pdf-extract

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority
MONGODB_DATABASE=elmoustechar
MONGODB_COLLECTION=book_summaries

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your-bucket-name
AWS_REGION=eu-north-1

# i2pdf Service URL (داخل Docker)
I2PDF_SERVICE_URL=http://i2pdf-service:8080

# Worker Settings
PDF_INDEXER_CONCURRENCY=2
PDF_DOWNLOAD_TIMEOUT_MS=180000
PDF_EXTRACTION_TIMEOUT_MS=600000
PDF_TMP_DIR=/tmp/pdf-indexer


